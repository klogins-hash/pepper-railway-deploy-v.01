# Pepper Railway Deploy v.01 Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Environment
NODE_ENV=development
APP_NAME=pepper-railway-deploy
APP_VERSION=0.1.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pepper_railway
DB_USER=postgres
DB_PASSWORD=your_password_here

# Railway Configuration
RAILWAY_API_TOKEN=your_railway_token_here
RAILWAY_PROJECT_ID=your_project_id_here
RAILWAY_ENVIRONMENT=development

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_username_here
DOCKER_PASSWORD=your_password_here

# Deployment Configuration
DEPLOYMENT_TARGET=development
LOG_LEVEL=info
DEBUG=false

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_TIMEOUT=30000

# SSL/TLS Configuration
ENABLE_SSL=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Monitoring & Logging
SENTRY_DSN=
LOG_FORMAT=json
